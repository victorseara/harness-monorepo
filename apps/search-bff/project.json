{
  "name": "search-bff",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/search-bff/src",
  "tags": ["scope:bff"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/dist/search-bff"],
      "options": {
        "command": "node build-lambda.js",
        "cwd": "apps/search-bff",
        "outputPath": "dist/apps/search-bff",
        "outputFileName": "main.js"
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "search-bff:build",
        "runBuildTargetDependencies": false
      },
      "configurations": {
        "development": {
          "buildTarget": "search-bff:build:development"
        },
        "production": {
          "buildTarget": "search-bff:build:production"
        }
      }
    },
    "test": {
      "options": {
        "passWithNoTests": true
      }
    },
    "package": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "cwd": "{workspaceRoot}",
        "command": "cd dist/apps/search-bff && zip -r ./deployment.zip ."
      }
    }
  }
}
